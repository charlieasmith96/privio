{
    "compileOnSave": true,
    "compilerOptions": {
      "outDir": "build",
      "module": "commonjs",
      "target": "ES2018",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "esModuleInterop": true
    },
    "exclude": [
      "node_modules",
      "build",
      "integration-test"
    ]
  }
  